{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "types": [
      "node"
    ],
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/client/**/*",
    "vite.config.ts",
    "tailwind.config.js",
    "postcss.config.js",
    "**/*.test.ts"
  ]
}