{
  "name": "haibun",
  "private": true,
  "workspaces": [
    "modules/*"
  ],
  "devDependencies": {
    "@haibun/utils": "file:modules/utils",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.14",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.3.1",
    "lerna": "^6.4.1",
    "node-notifier": "^10.0.1",
    "nodemon": "^1.3.3",
    "prettier": "^2.8.1",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "test": "NODE_OPTIONS=--experimental-vm-modules lerna run test",
    "test-watch": "nodemon -x 'npm run test'",
    "build": "lerna run build",
    "build-watch": "lerna watch --include-dependencies -- lerna run build --scope=\\$LERNA_PACKAGE_NAME",
    "lint": "eslint --ext .ts, ./src/",
    "format": "prettier --ignore-path .gitignore --write \"./src/**/*.+(ts|json)\"",
    "preversion": "npm run test"
  }
}
