{
  "name": "haibun",
  "private": false,
  "workspaces": [
    "modules/*"
  ],
  "devDependencies": {
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prefer-arrow": "^1.2.2",
    "eslint-plugin-prettier": "^4.2.1",
    "node-notifier": "^10.0.1",
    "prettier": "^2.8.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "depcruise": "depcruise -c .dependency-cruiser.js -T dot modules/**/build/ | dot -T svg > dependencygraph.svg",
    "test": "vitest run",
    "test-watch": "vitest",
    "build-watch": "tsc -b modules/ --watch",
    "build": "tsc -b modules/",
    "format": "prettier --ignore-path .gitignore --write \"./src/**/*.+(ts|json)\"",
    "preversion": "npm run test"
  },
  "dependencies": {
    "@types/chrome": "^0.0.237",
    "dependency-cruiser": "^13.1.4",
    "vitest": "^1.0.1"
  }
}
