{
  "name": "haibun",
  "type": "module",
  "private": false,
  "workspaces": [
    "modules/*"
  ],
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=11.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@types/node": "^24.10.0",
    "@vitest/coverage-v8": "^3.1.3",
    "concurrently": "^9.1.2",
    "dependency-cruiser": "^16.10.4",
    "isomorphic-dompurify": "^2.25.0",
    "playwright": "^1.56.1",
    "rollup-plugin-visualizer": "^5.14.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "vite": "^6.2.5",
    "vite-plugin-singlefile": "^2.2.0",
    "vitest": "^3.1.1"
  },
  "scripts": {
    "prepare": "npm run build",
    "test": "vitest run",
    "test-watch": "vitest --hideSkippedTests",
    "clean": "rm -rf modules/*/build modules/*/tsconfig.tsbuildinfo",
    "build:tsc": "tsc -b modules/core modules/domain-storage modules/web-http modules/storage-fs modules",
    "watch:tsc": "tsc -b modules/ --watch --preserveWatchOutput",
    "build:monitor": "vite build",
    "watch:monitor": "vite build --watch",
    "build": "npm run build:tsc && npm run build:monitor",
    "build-watch": "concurrently \"npm:watch:tsc\" \"npm:watch:monitor\"",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "check": "biome check .",
    "depcruise": "depcruise -c .dependency-cruiser.cjs -T dot modules | dot -T svg | depcruise-wrap-stream-in-html > dependency-graph.html",
    "preversion": "npm run test"
  },
  "version": "3.0.5"
}
