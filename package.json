{
  "name": "haibun",
  "type": "module",
  "private": false,
  "workspaces": [
    "modules/*"
  ],
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^5.2.6",
    "node-notifier": "^10.0.1",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "scripts": {
    "init": "npm i && npm run build",
    "test": "vitest run",
    "test-watch": "vitest --hideSkippedTests",
    "clean": "rm -rf modules/*/build modules/*/tsconfig.tsbuildinfo",
    "build-watch": "tsc -b modules/ --watch",
    "build": "tsc -b modules/core modules/domain-storage modules/web-http modules/storage-fs modules",
    "format": "prettier --ignore-path .gitignore --write \"./src/**/*.+(ts|json)\"",
    "depcruise": "depcruise -c .dependency-cruiser.cjs -T dot modules | dot -T svg | depcruise-wrap-stream-in-html > dependency-graph.html",
    "preversion": "npm run test"
  },
  "dependencies": {
    "@types/chrome": "^0.0.313",
    "dependency-cruiser": "^16.10.0",
    "vitest": "^3.1.1"
  },
  "version": "1.43.0"
}
