{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "build-local",
    "rootDir": "src",
    "preserveSymlinks": true,
    "paths": {
      "@haibun/*": [
        "../modules/*/build",
        "../modules/*"
      ]
    },
    "types": [
      "node"
    ],
    "lib": [
      "ES2022"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}